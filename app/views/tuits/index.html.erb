<% title "Tuiter" %>

<% if logged_in? %>
  <% if @user %>
    <%= render 'followerships/form' %>
  <% else %>
    <%= render 'form' %>
  <% end %>
<% end %>

<% @tuits.each do |tuit| %>
  <%= div_for tuit do %>
    <h2><%= link_to_unless_current tuit.user.username, user_tuits_path(tuit.user) %></h2>
    <%= tuit.body %><br/>
    <%= time_ago_in_words tuit.created_at %> ago
    <hr/>
  <% end %>
<% end %>
